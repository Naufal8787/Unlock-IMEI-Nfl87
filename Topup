<script>
  // Ganti dengan nomor admin Anda
  const waAdmin = "62812xxxxxxxx";

  document.getElementById("wa-now").href =
    `https://wa.me/${waAdmin}?text=Halo%20Admin,%20saya%20ingin%20pesan%20Unblock%20IMEI%203%20bulan.`;

  document.getElementById("orderForm").addEventListener("submit", function(e){
    e.preventDefault();
    const name = this.name.value;
    const phone = this.phone.value;
    const email = this.email.value;
    const payment = this.payment.value;

    // WhatsApp Redirect
    const waText = `Halo Admin, saya mau pesan Unblock IMEI 3 Bulan.%0A
Nama: ${name}%0A
No. WA: ${phone}%0A
Email: ${email}%0A
Metode Bayar: ${payment}`;
    window.open(`https://wa.me/${waAdmin}?text=${waText}`, "_blank");

    // Kirim ke Email via Formspree
    fetch("https://formspree.io/f/YOUR_FORM_ID", {
      method:"POST",
      headers:{ "Content-Type":"application/json" },
      body: JSON.stringify({ name, phone, email, payment })
    }).then(r => alert("Order berhasil dikirim! Admin akan segera menghubungi Anda."));
  });
</script>
